<Window x:Class="TaskManagerClient.View.WorkSpace"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManagerClient.View"
        xmlns:vm="clr-namespace:TaskManagerClient.ViewModel"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="WorkSpace" Height="450" Width="800">
    <Window.DataContext>
        <vm:WorlSpaceViewModel/>
    </Window.DataContext>
    <Grid ShowGridLines="True">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition ></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="10">
            <Button Content="Личные Данные" Style="{StaticResource MaterialDesignFlatLightBgButton}" Margin="0,5"/>
            <Button  Content="Сотрудники"  Style="{StaticResource MaterialDesignFlatLightBgButton}" Margin="0,5"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Background="Red">
            <Frame Content="{Binding CurrentPage }" />
        </StackPanel>


    </Grid>
</Window>
